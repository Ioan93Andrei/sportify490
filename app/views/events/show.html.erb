<div class="container">

  <div class="show-card" style="background-image: url(<%= asset_path 'tennis-court.jpg' %>); ">
    <div class="d-flex">
      <div>
        <h2><%= @event.name.truncate(22) %></h2>
        <h3><%= @event.level %></h3>
      </div>
    <div id="sport-tag">
      <p><i class="fas fa-running"></i> <span class="card-category"><%= @event.sport %></span></p>
    </div>
  </div>
    </div>

  <div class="d-flex justify-content-between">
    <div>
      <div><%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "img-card-avatar" %>
      </div>
      <p><%= @event.user.username %></p>
    </div>

    <div>
      <p><i class="far fa-calendar-alt"></i> <%= @event.date.strftime("%d/%m/%Y") %></p>
    </div>
  </div>

  <div>
    <h2>Description</h2>
    <p id="background-description"><%= @event.description %></p>
  </div>

  <div class="d-flex">
    <p><i class="fas fa-money-bill-wave"></i> <%= @event.price %></p>
  </div>

  <div class="d-flex">
    <p><i class="fas fa-users"></i> <%= @event.capacity %></p>
  </div>

  <div class="d-flex">
    <p><i class="fas fa-map-marked-alt"></i> <%= @event.location.truncate(22) %></p>
  </div>

  <div>
    <p>map</p>
  </div>

  <button type="button" class="btn btn-primary btn-lg btn-block sticky">Send request</button>

  <div>
