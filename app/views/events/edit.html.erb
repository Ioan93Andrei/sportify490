<div class="container">

  <%= simple_form_for(@event) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}%>
    <%= f.input :price %>
    <%= f.input :capacity %>
    <%= f.input :level %>
    <%= f.button :submit %>
  <% end %>
</div>