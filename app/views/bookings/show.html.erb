<div class="show-card">
  <div>
    <div class="event-name-show">
      <h2 class=""><%= @booking.event.name %></h2>
    </div>
    <div class="d-flex justify-content-between event-info-show">
      <div class="d-flex justify-content-between">
        <p><span class="card-category"><%= @booking.event.sport %></span></p>
        <% if @booking.event.level == "Beginner" %>
          <p class="text-success ml-2"><%= @booking.event.level %></p>
        <% elsif @booking.event.level == "Intermediate" %>
        <% elsif @booking.event.level == "Intermediate" %>
          <p class="text-warning ml-2"><%= @booking.event.level %></p>
        <% else %>
          <p class="text-danger ml-2"><%= @booking.event.level %></p>
        <% end %>
      </div>
      <div>
        <p> <%= @booking.event.bookings.count + 1 %> / <%= @booking.event.capacity %></p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between show-card-avatar">
    <div>
    <% if @booking.event.user.photo.attached? %>
      <%= cl_image_tag @booking.event.user.photo.key, class: "img-card-avatar" %>
    <% else %>
      <%= image_tag 'avatar-backup.svg', width: 74 %>
    <% end %>
      <p class="center-text"><%= @booking.event.user.username %></p>
    </div>
    <div>
      <p id="background-description"><%= @booking.event.description %></p>
    </div>
  </div>

